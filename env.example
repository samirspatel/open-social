# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key_32_chars_minimum
NEXTAUTH_URL=http://localhost:3000

# GitHub Webhook Security (optional - for real-time features)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_from_github_app

# Application Environment
NODE_ENV=development

# Security Configuration (optional - defaults provided)
ALLOWED_COLLABORATORS=samirpatel
RATE_LIMIT_PER_HOUR=100

# Production URLs (for deployment)
# NEXTAUTH_URL=https://your-domain.com
# GITHUB_WEBHOOK_URL=https://your-domain.com/api/webhook/github
